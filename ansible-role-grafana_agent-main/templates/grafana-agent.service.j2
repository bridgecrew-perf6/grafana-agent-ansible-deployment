[Unit]
Description=Grafana Cloud agent
Wants=network-online.target
After=network-online.target
Environment=HOSTNAME=%H

[Service]
Type=simple
User={{ service_id }}
ExecStart={{ agent_location }}/agent-linux-{{ grafana_agent_type[ansible_architecture] }} --config.file={{ config_location }}/agent-config.yaml -config.expand-env
Restart=always

[Install]
WantedBy=multi-user.target
